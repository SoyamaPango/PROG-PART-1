<Window x:Class="RecipeAppWpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeApp" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="IngredientTextBox" Width="200" Margin="10" PlaceholderText="Enter Ingredient"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click" Width="200" Margin="10"/>
            <ListBox x:Name="RecipeListBox" Width="300" Height="200" Margin="10" SelectionChanged="RecipeListBox_SelectionChanged"/>
            <TextBlock x:Name="RecipeDetailsTextBlock" TextWrapping="Wrap" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

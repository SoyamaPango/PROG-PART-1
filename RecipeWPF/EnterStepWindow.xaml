<Window x:Class="RecipeWPF.EnterStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Recipe Step" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Step Description:"/>
        <TextBox Grid.Row="1" x:Name="StepTextBox" Margin="5"/>

        <Button Grid.Row="2" Content="Save Step" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</Window>
